<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>QRCode.Avalonia</PackageId>
    <Title>Avalonia QRCode Control</Title>
    <Version>1.0.0</Version>
    <Authors>Mike James</Authors>
    <Company>Mike James</Company>
    <Description>A QRCore control for Avalonia. Powered by QRCoder</Description>
    <Copyright>Copyright Â© Mike James 2021</Copyright>
    <PackageProjectUrl>https://github.com/MikeCodesDotNET/Avalonia-QRCode</PackageProjectUrl>
    <PackageTags>qrcode;barcode;controls;avalonia</PackageTags>
    <PackageIcon>Icon.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  
  <ItemGroup>    
      <None Include="images\Icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>
  
  
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.0" />
    <PackageReference Include="Net.Codecrete.QrCodeGenerator" Version="2.0.1" />
    <PackageReference Include="SixLabors.ImageSharp" Version="2.0.0" />
    <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="1.0.0-beta14" />
    
  </ItemGroup>

</Project>
